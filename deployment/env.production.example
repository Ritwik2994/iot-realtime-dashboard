# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-password-here
MONGO_DATABASE=iot-dashboard

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Logging Configuration
LOG_LEVEL=info

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password

# MQTT Configuration
SIMULATION_INTERVAL=5000

# Application Configuration
NODE_ENV=production
PORT=3000

# WebSocket
WS_PORT=3001

# MongoDB
MONGODB_URI=mongodb://localhost:27017/iot-dashboard

# Allowed domains for CORS (comma separated)
ALLOWED_DOMAINS=http://localhost:3000

# Rate limiting configuration
THROTTLE_TTL=60 # Time-to-live in seconds
THROTTLE_LIMIT=10 # Maximum requests in the TTL period


# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_CLIENT_ID=iot-dashboard-backend
MQTT_USERNAME=
MQTT_PASSWORD=

# Health Check Configuration
HEALTH_MEMORY_HEAP_THRESHOLD=200
HEALTH_MEMORY_RSS_THRESHOLD=500
HEALTH_DISK_THRESHOLD_PERCENT=0.85
HEALTH_DISK_PATH=/
HEALTH_HTTP_PING_URL=https://google.com
HEALTH_HTTP_TIMEOUT=5000


# Server secret for JWT or other purposes
SERVER_SECRET=test-secret-key-for-jwt-encryption
ACCESS_TOKEN_EXPIRATION_TIME=3600
ENCRYPTION_KEY_32_BYTE=12345678901234567890123456789012=
IV_KEY=1234567890123456


